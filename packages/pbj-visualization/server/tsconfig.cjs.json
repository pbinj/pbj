{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "esModuleInterop": true,
    "module": "CommonJS",
    "moduleResolution": "node",
    "outDir": "../dist/cjs",
    "declaration": false,
    "skipLibCheck": true,
    "paths": {
      "@pbinj/pbj-guards": ["../node_modules/@pbinj/pbj-guards/src/index.ts"],
      "@pbinj/pbj/*": ["../node_modules/@pbinj/pbj/src/*.ts"],
      "@pbinj/pbj": ["../node_modules/@pbinj/pbj/src/index.ts"]
    }
  },
  "exclude": ["**/__test__/**", "**/*.test.ts"]
}
