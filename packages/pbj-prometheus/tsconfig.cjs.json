{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "module": "CommonJS",
    "moduleResolution": "classic",
    "outDir": "./dist/cjs",
    "target": "ES2019",
    "declaration": false,
     "paths": {
      "@pbinj/pbj/*": ["./node_modules/@pbinj/pbj/src/*.ts"],
      "@pbinj/pbj": ["./node_modules/@pbinj/pbj/src/index.ts"],
      "prom-client": ["./node_modules/prom-client/index.d.ts"]
    }
  },
  "exclude": ["src/__test__/**"]
}
